{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"includes": ["**", "!test/**", "!package.json"]
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!test/**", "!package.json"],
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
